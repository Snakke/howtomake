<div id="profile" class="profile">
  <div class="profile-info row">
    <div id="profile-image" class="image" align="center" data-user-id=<%= @user.id %> data-can-edit=<%= can_edit(@user) %> >
      <%= cl_image_tag(@user.image, id: "image", :width => 200, :height => 200, :crop => :fill) %>
    </div>
    <div class="col-md-9 col-lg-9">
      <div class="row">
        <h3 class="editable" data-attribute="name" data-url=<%= user_path %> data-activator="#bio-edit"><%= @user.name %></h3>
        <%= editable(@user) %>
      </div>
    </div>
  </div>
</div>

<%= render 'manuals/table', manuals: @user.manuals %>
</table>
