<footer class="footer">
  <div class="container">
    <div class="locale">
      <% if user_signed_in? %>
      <div class="dropup">
        <span>Locale:</span>
        <a class="dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span><%= current_user.locale.upcase %></span>
        </a>
        <div class="dropdown-menu">
          <%= link_to "RU", set_new_locale_user_path(current_user.id, locale: 'ru'), method: :post, class: 'dropdown-item' %>
          <%= link_to "EN", set_new_locale_user_path(current_user.id, locale: 'en'), method: :post, class: 'dropdown-item' %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="theme">
      <div class="dropup">
        <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span>Theme:</span>
        </a>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Light</a>
          <a class="dropdown-item" href="#">Dark</a>
        </div>
      </div>
    </div>
  </div>
</footer>