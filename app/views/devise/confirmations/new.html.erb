<div class="form-horizontal" role="form">
<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :uid, "Email", class: 'col-2 col-form-label text-center' %>
    <%= f.email_field :uid, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', placeholder: 'Email'  %>
  </div>

  <div class="actions">
    <%= f.submit "Resend", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
</div>