<table id="user-table" class="table table-striped table-bordered table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= User.human_attribute_name("uid") %></th>
      <th><%= User.human_attribute_name("name") %></th>
      <th><%= t('action.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.uid %></td>
        <td><%= user.name %></td>
        <td>
          <%= link_to t('action.edit'), edit_admin_user_path(user), class: 'btn btn-sm btn-primary' %>
          <%= link_to t('action.show'), admin_user_path(user), class: 'btn btn-sm btn-secondary' %>
          <%= link_to t('action.destroy'), admin_user_path(user), class: 'btn btn-sm btn-danger', method: :delete,
                                                                          data: { confirm: 'Are you sure?' } %>
          <%=  lock_unlock_user(user) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>