<h3><%= User.model_name.human(count: 2) %></h3>

<div class="card-deck">
  <% @users.each do |user| %>
    <div class="card profile-card">
      <%= cl_image_tag(user.image, id: "image", height: 180, width: 240, aspect_ratio: "4:3", crop: :fill, class: "card-img-top") %>
      <div class="card-block">
        <h3 class="card-title"><%= link_to user.name, user %></h3>
      </div>
    </div>
  <% end %>
</div>