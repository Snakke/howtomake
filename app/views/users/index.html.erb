
<h3>Users</h3>

<table class="table table-striped table-bordered table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.uid %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Show', user, class: 'btn btn-sm btn-secondary' %>
          <%= link_to 'Destroy', user, class: 'btn btn-sm btn-danger', method: :delete,
                                                                          data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>